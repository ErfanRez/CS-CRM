<UserControl x:Class="CRMPracticeProject.Forms.ReminderUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CRMPracticeProject.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="610">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="196*"/>
            <ColumnDefinition Width="67*"/>
            <ColumnDefinition Width="22*"/>
        </Grid.ColumnDefinitions>
        <Image Source="/Image/AlarmWhite.png" Grid.Column="0" Height="25" Width="25"/>
        <Image Source="/Image/InfoWhite.png" Grid.Column="3" Height="25" Width="25"/>
        <TextBlock Grid.Column="2" Text="Sample" x:Name="ReminderTitleTxt" HorizontalAlignment="Left" VerticalAlignment="Center" Foreground="#e5e5e5" Margin="10,0,0,0" />
        <TextBlock Grid.Column="1" Text="Sample" x:Name="ReminderInfoTxt" HorizontalAlignment="Left" Foreground="#e5e5e5" VerticalAlignment="Center" Margin="10,0,0,0" FontWeight="Bold" FontSize="16"/>

    </Grid>
</UserControl>
